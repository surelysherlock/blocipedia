<h1>Edit Wiki</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Editing Knowledge on the Internet</p>
    <ul>
      <li>Its a big responsiblity</li>
      <li>Don't swear</li>
      <li>Dont troll in the comment section</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @wiki do |w| %>
      <div class="form-group">
        <%= w.label :title %>
        <%= w.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= w.label :body %>
        <%= w.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <div class="form-group">
        <%= w.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
    <% if @wiki.private == true %>
      <% if @wiki.collaborators.empty? %>
        <h5> No collaborators yet </h5>
        <%= link_to "Add Collaborators", new_wiki_collaborator_path(@wiki), class: 'btn btn-sq-sm btn-primary' %>
      <% else %>
        <h4> Collaborators </h4>
        <% @wiki.collaborators.each do |c| %>
          <div class="media">
            <div class="media-body">
              <h8 class="media-heading">
                <p><%= link_to c.email, wiki_collaborator_path(c.id) %></p>
              </h8>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
